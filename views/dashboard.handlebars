<div class="row">
    <div class="col-auto">
        <h2>Welcome, {{username}}!</h2>
    </div>
</div>
<div class="row mt-4">
    <div class="col-md-6">
        <h3>Create a New Post:</h3>

        <form class="form new-post-form">
            <div class="form-group">
                <label for="post-name">Title:</label>
                <input class="form-input" type="text" id="post-name" name="post-name" />
            </div>
            <div class="form-group">
                <label for="post-content">Post:</label>
                <textarea class="form-input" id="post-content" name="post-content"></textarea>
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-primary">Create</button>
            </div>
        </form>
    </div>

    {{#if posts.length}}
    <div class="col-md-6 post-list">
        <h3>My Posts:</h3>

        {{#each posts as |post|}}
        {{log this}}
        <h2>{{post.title}}</h2>
        <p>Created by {{../username}} on {{format_date post.date}}</p>
        <p>
            {{post.content}}
        </p>
        <button class="btn btn-sm " data-id="{{post.id}}">EDIT</button>
        <button class="btn btn-sm btn-danger" data-id="{{post.id}}">DELETE</button>
    </div>
    {{/each}}
</div>
</div>
{{/if}}
</div>

<script src="/js/dashboard.js"></script>