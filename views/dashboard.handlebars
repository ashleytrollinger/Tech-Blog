<div class="row">
    <div class="col-auto">
        <h2>Welcome, {{name}}!</h2>
    </div>
</div>
<div class="row mt-4">
    <div class="col-md-6">
        <h3>Create a New Post:</h3>

        <form class="form new-project-form">
            <div class="form-group">
                <label for="post-name">Title:</label>
                <input class="form-input" type="text" id="post-name" name="post-name" />
            </div>
            <div class="form-group">
                <label for="post-content">Post:</label>
                <textarea class="form-input" id="post-content" name="post-content"></textarea>
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-primary">Create</button>
            </div>
        </form>
    </div>

    {{#if post.length}}
    <div class="col-md-6 project-list">
        <h3>My Posts:</h3>

        {{#each post as |post|}}
        <h2>{{title}}</h2>
        <p>Created by {{user.username}} on {{format_date date}}</p>
        <p>
            {{content}}
        </p>
        <button class="btn btn-sm " data-id="{{post.id}}">EDIT</button>
        <button class="btn btn-sm btn-danger" data-id="{{post.id}}">DELETE</button>
    </div>
</div>
{{/each}}
</div>
{{/if}}
</div>

<script src="./js/profile.js"></script>